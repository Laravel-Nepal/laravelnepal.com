{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "achyutn/filament-kit",
    "type": "project",
    "description": "The starter kit for the Laravel framework with Filament v4 as Admin Panel.",
    "keywords": [
        "laravel",
        "framework",
        "filament",
        "filament-kit",
        "starter-kit"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-gd": "*",
        "achyutn/filament-log-viewer": "^1",
        "achyutn/laravel-helpers": "^0.10.0",
        "achyutn/laravel-seo": "^1.3",
        "awcodes/filament-gravatar": "^3.0",
        "cyrildewit/eloquent-viewable": "^7.0",
        "dipesh79/laravel-share": "^1.1",
        "dutchcodingcompany/filament-developer-logins": "^2.0",
        "filament/filament": "^4.3.1",
        "filament/spatie-laravel-media-library-plugin": "^3.3",
        "filament/spatie-laravel-settings-plugin": "^4.0",
        "joaopaulolndev/filament-edit-profile": "^2.0",
        "laravel/framework": "^12.44",
        "laravel/tinker": "^2.10.1",
        "owenvoke/blade-fontawesome": "^2.9",
        "ryangjchandler/orbit": "^1.4",
        "spatie/laravel-markdown": "^2.7"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.16",
        "barryvdh/laravel-ide-helper": "^3.6",
        "driftingly/rector-laravel": "^2.0",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.24",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.2",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pxlrbt/filament-environment-indicator": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "lint": [
            "pint",
            "rector",
            "phpstan",
            "@test"
        ],
        "rint": [
            "pint",
            "rector"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
